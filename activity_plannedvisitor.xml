<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="New Planned Visitor"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30dp"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_button1"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="44dp"
        app:layout_constraintTop_toBottomOf="@+id/space"/>


    <RadioGroup
        android:id="@+id/radioGroup_diffLevel1"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button1"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:id="@+id/radioButton_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Male" />

        <RadioButton
            android:id="@+id/radioButton_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Female" />
    </RadioGroup>


    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button1"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_diffLevel1" />

    <Spinner
        android:id="@+id/visitortype"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button1"
        android:ems="10"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:hint="Visitor Type"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber"/>

    <EditText
        android:id="@+id/purpose"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button1"
        android:ems="10"
        android:hint="Purpose"
        android:inputType="textPersonName"
        android:drawableLeft="@drawable/ic_people_black_24dp"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visitortype" />



    <Button
        android:id="@+id/btnpick"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_button1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="303dp"
        app:layout_constraintTop_toBottomOf="@+id/visitortype" />


    <EditText
        android:id="@+id/date"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button1"
        android:drawableLeft="@drawable/ic_access_time_black_24dp"
        android:ems="10"
        android:hint="Date"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purpose" />

    <EditText
        android:id="@+id/timeofmeeting"
        android:layout_width="330dp"
        android:layout_height="35dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button1"
        android:ems="10"
        android:hint="Time"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />




    <Button
        android:id="@+id/submitr"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/submitbutton"
        android:text="Submit"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeofmeeting" />

</android.support.constraint.ConstraintLayout>